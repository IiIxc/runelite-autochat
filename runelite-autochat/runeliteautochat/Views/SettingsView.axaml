<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:runeliteautochat.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="runeliteautochat.Views.SettingsView"
             x:DataType="viewModels:SettingsVM">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="10">Settings: </TextBlock>
        <StackPanel Orientation="Horizontal" >
            <TextBlock Margin="10" Padding="10">Interval (s):  </TextBlock>
            <TextBox Height="10"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" >
            <TextBlock Margin="10" Padding="10" ToolTip.Tip="Separate with ',' character">Message/s: </TextBlock>
            <TextBox Height="100" Width="600"></TextBox>
        </StackPanel>
        
        <Button Width="100" Margin="20,20,0,0" HorizontalContentAlignment="Center">Start</Button>
        
    </StackPanel>
</UserControl>
